// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Recipe {
  id    Int    @id @default(autoincrement())
  title String
  tags  Tag[]
}

model Tag {
  id      Int      @id @default(autoincrement())
  name    String
  recipes Recipe[]
}
